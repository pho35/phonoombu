@model MvcPhoNoombuRemake.DAL.Post

@{
    ViewBag.Title = "Edit";
}

<h2>Modifier ce post</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Post</legend>

        @Html.HiddenFor(model => model.PostId)

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentPost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContentPost)
            @Html.ValidationMessageFor(model => model.ContentPost)
        </div>

        <p>
            <input type="submit" value="Sauvegarder" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourner à la liste de mes posts", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
