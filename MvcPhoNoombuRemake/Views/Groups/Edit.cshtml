@model MvcPhoNoombuRemake.DAL.Groups

@{
    ViewBag.Title = "Edit";
}

<h2>Modifier le groupe</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Groups</legend>

        @Html.HiddenFor(model => model.GroupsId)

        <div class="editor-label">
            @Html.LabelFor(model => model.GroupsName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupsName)
            @Html.ValidationMessageFor(model => model.GroupsName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourner à la liste de mes groupes", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
